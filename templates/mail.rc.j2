# {{ ansible_managed }}

{% if inventory is defined and inventory.mail is defined %}
set v15-compat
set smtp=smtp://{{ inventory.mail.username | my_urlencode }}:{{ inventory.mail.password | my_urlencode }}@{{ inventory.mail.host }}:{{ inventory.mail.port }}
set smtp-auth=plain
set from="{{ inventory.mail.from }} ({{ inventory.mail.from }})"
{% endif %}

#eof